<h2>Edit Profile</h2>
<p>
<h2> Update your profile preferences below:
<p>

<% if @user && @user.errors.any? %>
  <div>
    <strong>Some issues with your Profile Update, please fix them:</strong>
    <ul>
      <% @user.errors.full_messages.each do |user_detail| %>
        <li><%= user_detail %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="POST" action="/profile/edit">
  <label for="display_name">User Name</label>
  <input name="display_name" value="<%= get_current_user.display_name %>" /></br>

  <label for="email">Email: </label>
  <input name="email" value="<%= get_current_user.email %>" /></br>

  <label for="phone_number">Phone Number:</label>
  <input name="phone_number" value="<%= get_current_user.get_formatted_phone_number %>" /></br>

  <label for="drink">Default Coffee Preference:</label>
  <input name="drink" value="<%= get_current_user.drink %>" /></br>

  <label for="password">Password:</label>
  <input name="password" value="< Enter your new password HERE >" /></br>

  <input value="Update Account" type="submit" />
</form>

<p><a href="/">Back to Main Page</a></p>


