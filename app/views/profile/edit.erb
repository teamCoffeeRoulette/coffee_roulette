<h2>Edit Profile</h2>
</br>
<h2> Update your profile preferences below:
</br>

<form method="POST" action="/profile/edit">
  <label for="display_name">User Name</label>
  <input name="display_name" value="<%= @user.display_name %>" /></br>

  <label for="email">Email: </label>
  <input name="email" value="<%= @user.email %>" /></br>

  <label for="phone_number">Phone Number:</label>
  <input name="phone_number" value="<%= @user.phone_number %>" /></br>

  <label for="drink">Default Coffee Preference:</label>
  <input name="drink" value="<%= @user.drink %>" /></br>

  <label for="password">Password:</label>
  <input name="password" value="<%= @user.password %>" /></br>

  <input value="Update Account" type="submit" />
</form>


